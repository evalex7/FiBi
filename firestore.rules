
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(doc) {
      return request.auth.uid == doc.familyMemberId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }

    match /{collection}/{docId} 
      where collection in ['categories', 'expenses', 'budgets', 'payments', 'goals'] {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(request.resource.data);
      allow update, delete: if isSignedIn() && isOwner(resource.data);
    }
  }
}
