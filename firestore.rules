
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to manage their own profile information, but allow all authenticated users to read it.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read shared data
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.familyMemberId == request.auth.uid;
    }
    match /expenses/{expenseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.familyMemberId == request.auth.uid;
    }
    match /budgets/{budgetId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.familyMemberId == request.auth.uid;
    }
    match /payments/{paymentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.familyMemberId == request.auth.uid;
    }
    match /todos/{todoId} {
        allow read, write: if request.auth != null && request.resource.data.familyMemberId == request.auth.uid;
    }
    
    // Fallback for any other path - deny access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
