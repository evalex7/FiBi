
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document.
     * @param resource The document resource.
     */
    function isOwner(resource) {
      return isSignedIn() && request.auth.uid == resource.data.familyMemberId;
    }

    /**
     * @description Checks if the incoming data owner matches the authenticated user.
     * @param request The request object.
     */
    function isOwnerOfNewData(request) {
        return isSignedIn() && request.auth.uid == request.resource.data.familyMemberId;
    }

    /**
     * @description Rules for user profiles. Any signed-in user can read any profile,
     *              but can only write to their own. Listing all users is disallowed.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.uid == userId;
      allow list: if false; // Disallow listing all users for security.
    }

    /**
     * @description Rules for categories. Any authenticated user can read all categories.
     *              Only the creator can create, update, or delete a category.
     *              isCommon categories are an exception and can be managed by anyone (future enhancement).
     */
    match /categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create: if isOwnerOfNewData(request);
      allow update, delete: if isOwner(resource);
    }
    
    /**
     * @description Rules for expenses. Any authenticated user can read all expenses.
     *              Only the creator can create, update, or delete an expense.
     */
    match /expenses/{expenseId} {
      allow get, list: if isSignedIn();
      allow create: if isOwnerOfNewData(request);
      allow update, delete: if isOwner(resource);
    }

    /**
     * @description Rules for budgets. Any authenticated user can read all budgets.
     *              Only the creator can create, update, or delete a budget.
     */
    match /budgets/{budgetId} {
      allow get, list: if isSignedIn();
      allow create: if isOwnerOfNewData(request);
      allow update, delete: if isOwner(resource);
    }
    
    /**
     * @description Rules for recurring payments. Any authenticated user can read all payments.
     *              Only the creator can create, update, or delete a payment.
     */
    match /payments/{paymentId} {
       allow get, list: if isSignedIn();
       allow create: if isOwnerOfNewData(request);
       allow update, delete: if isOwner(resource);
    }
  }
}
